{
  "name": "hms-backend",
  "version": "1.0.0",
  "description": "Express + MongoDB API for serving theme data previously sourced from local JSON/TSX files.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec \"ts-node src/server.ts\"",
    "dev:nodemon": "nodemon --watch src --ext ts,js,json --exec \"ts-node src/server.ts\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "create-superadmin": "ts-node src/scripts/create-superadmin.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fast-glob": "^3.3.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.7",
    "@types/node": "^22.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
